<div class="modal fade" id="signUpModal">
      <div class="modal-dialog">
        <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title"><div class="sub">회원가입</div></h5>
                <button type="button" class="close" data-dismiss="modal">
                      <span>&times;</span>
                </button>
              </div>
              <div class="modal-body">    
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>

                    <div class="field1">
                   
                    <%= f.email_field :email, autofocus: true, placeholder:"       이메일" ,autocomplete: "email" %>
                    </div>

                    <div class="field1">
                  
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                    <%= f.password_field :password, placeholder:"       비밀번호", autocomplete: "off" %>
                    </div>

                    <div class="field1">
                    <%= f.password_field :password_confirmation, placeholder:"       비밀번호 확인", autocomplete: "off" %>
                    </div>

                    <div class="actions">
                      <%= f.submit "회원가입", class: 'btn btn-default' %>
                    </div>
                    
                    <div class="hi">
                      지금 감정을 색으로 표현해보세요.
                    </div>
                  <% end %>
            </div>
        </div>
    </div>
</div>